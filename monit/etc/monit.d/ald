check process ReplayRecord with pidfile /root/platform/ReplayRecord/RecordServer.pid
    start program = "/bin/bash -c 'source /etc/profile && cd /root/platform/ReplayRecord && ../bin/ReplayRecord --UNIQUE'"
    stop program = "/bin/killall ReplayRecord"
    if not exist then restart

